<h1>Listing Students</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Responses</th>
      <th>Reviews</th>
      <th>Remove from Class</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <% unless user == @current_user %>
        <tr>
          <td><%= link_to user.full_name, url_for(user) %></td>
          <td><%= user.responses.size %></td>
          <td><%= Response.where(reviewer_id: user.id).count %></td>
          <td><%= link_to "Remove", remove_student_path(user.id), method: :delete, confirm: "Are you sure you want to remove this student from your class?", class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
